{
  "variables": {
    "windows-startup-script-cmd": "winrm quickconfig -quiet & net user /add packer_user & net localgroup administrators packer_user /add & winrm set winrm/config/service/auth @{Basic=\"true\"} & powershell -Command \"& {Set-ExecutionPolicy AllSigned -Force}\""
  },
  "builders": [
    {
      "type": "googlecompute",
      "project_id": "gcp-dev-ops",
      "disk_size": "50",
      "image_name": "madebypacker-{{timestamp}}",
      "disk_type": "pd-ssd",
      "machine_type": "n1-standard-1",
      "source_image": "windows-server-2016-dc-v20170227",
      "zone": "us-west1-b",
      "communicator": "winrm",
      "winrm_username": "packer_user",
      "winrm_use_ssl": true,
      "winrm_insecure": true,
      "tags": ["packer-winrm"],
      "metadata": { "windows-startup-script-cmd": "{{user `startup_script`}}" }
    }
  ],
  "provisioners": [
    {
      "type": "powershell",
      "inline": ["dir c:\\"]
    }
  ]
}
